[Unit]
Description=Vault TLS Certificate Replacement
After=network.target
StartLimitIntervalSec=10
StartLimitBurst=5

[Service]
Type=oneshot
ExecStartPre=/usr/bin/install -Dm755 -o vault -g vault /opt/lego/certificates/${domain}.crt /etc/vault.d/tls/
ExecStartPre=/usr/bin/install -Dm755 -o vault -g vault /opt/lego/certificates/${domain}.key /etc/vault.d/tls/
ExecStart=/usr/bin/systemctl restart vault.service

[Install]
WantedBy=multi-user.target